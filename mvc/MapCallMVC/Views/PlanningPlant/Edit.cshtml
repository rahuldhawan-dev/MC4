@model PlanningPlantViewModel

@using (Form.BeginForm("Update", "PlanningPlant", new { Model.Id }))
{
    <div class="field-column fc200">
        @Html.EditorFor(x => x.Code)
        @Html.EditorFor(x => x.Description)
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Save")
            @Html.LinkButton("Cancel", "Show", "PlanningPlant", new { Model.Id })
        </text>)
    </div>
}