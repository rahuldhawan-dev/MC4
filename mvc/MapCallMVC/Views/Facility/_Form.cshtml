    @Html.EditorFor(x => x.FacilityContactInfo)
    @Html.EditorFor(x => x.AWSecurityTier)
    @Html.EditorFor(x => x.ArcFlashStudyRequired)
    @Html.EditorFor(x => x.Process)
</div>