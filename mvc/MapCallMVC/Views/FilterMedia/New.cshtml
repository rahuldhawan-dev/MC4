@model CreateFilterMedia

@using (Form.BeginForm("Create", "FilterMedia")) {
    @Html.Partial("_Form")
    @Control.SubmitButton("Save")

    if (Model.Facility != 0) {
        @Html.LinkButton("Cancel", "Show", "Facility", new {id = Model.Facility})
    } else {
        @Html.LinkButton("Cancel", "Search", "FilterMedia")
    }
}