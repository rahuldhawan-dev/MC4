@using MMSINC.Helpers
@model CreateViolationCertificate
@{
    var cb = new CrumbBuilder(ViewContext, Model);
    cb.Separator = " : ";
    cb.WithLinkCrumb("Certificates of Violation", "ViolationCertificate", "Index");
    cb.WithTextCrumb("Renewing");
    ViewData["TitleCrumbs"] = cb;
}
@using (Form.BeginForm("Create", "ViolationCertificate"))
{
    <div class="field-column fc200">
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.EditorFor(x => x.Employee, new { Container = @Model })
        @Html.Partial("_Form")
        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Save")
            @Html.LinkButton("Cancel", "Show", "ViolationCertificate", new{ Model.Id })
        </text>)
    </div>
}