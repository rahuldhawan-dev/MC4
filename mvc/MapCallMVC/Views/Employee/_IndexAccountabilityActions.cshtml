@model Employee

@(Html.TableFor(x => Model.EmployeeAccountabilityActions, new { id = "employeeAccountabilityActionsTable" })
      .TemplateColumnFor(x => Html.ActionLink("View", "Show", "EmployeeAccountabilityAction", new { x.Id, Area = "HumanResources" }, null))
      .ColumnFor(x => x.Id)
      .ColumnFor(x => x.OperatingCenter.OperatingCenterCode, "Operating Center")
      .ColumnFor(e => e.DisciplineAdministeredBy)
      .ColumnFor(e => e.AccountabilityActionTakenType)
      .ColumnFor(x => x.AccountabilityActionTakenDescription)
      .ColumnFor(x => x.DateAdministered)
      .ColumnFor(x => x.StartDate)
      .ColumnFor(x => x.EndDate)
      .ColumnFor(x => x.NumberOfWorkDays)
      .ColumnFor(x => x.HasModifiedDiscipline)
      .ColumnFor(e => e.ModifiedDisciplineAdministeredBy)
      .ColumnFor(e => e.ModifiedAccountabilityActionTakenType)
      .ColumnFor(e => e.ModifiedAccountabilityActionTakenDescription)
      .ColumnFor(e => e.DateModified)
      .ColumnFor(e => e.ModifiedStartDate)
      .ColumnFor(e => e.ModifiedEndDate)
      .ColumnFor(e => e.ModifiedNumberOfWorkDays)
      .ColumnFor(e => e.BackPayRequired)
    )