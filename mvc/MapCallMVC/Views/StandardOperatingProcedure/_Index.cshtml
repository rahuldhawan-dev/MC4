@model SearchStandardOperatingProcedure

@(Html.TableFor(_ => Model)
    .WithCaption("Records found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new { x.Id }))
    .SortableColumnFor(x => x.FunctionalArea)
    .SortableColumnFor(x => x.Section)
    .SortableColumnFor(x => x.SubSection)
    .SortableColumnFor(x => x.Status)
    .SortableColumnFor(x => x.Category)
    .SortableColumnFor(x => x.OperatingCenter)
    .SortableColumnFor(x => x.Facility)
//    .SortableColumnFor(x => x.Equipment)
    .SortableColumnFor(x => x.DateApproved)
    .SortableColumnFor(x => x.DateIssued)
    .SortableColumnFor(x => x.Revision)
    .SortableColumnFor(x => x.Description)
    .SortableColumnFor(x => x.PsmTcpa)
    .SortableColumnFor(x => x.Dpcc)
    .WithPaginatedFooter())