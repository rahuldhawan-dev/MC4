@model CreateStandardOperatingProcedureReview

@using (var f = Form.BeginForm("Create", "StandardOperatingProcedureReview", new { StandardOperatingProcedure = Model.StandardOperatingProcedure }))
{
    f.Confirmation = "Are you sure you want to submit this review? You can not edit your answers later!";
    
    for (var i = 0; i < Model.Questions.Count; i++)
    {
        <div class="q-item">
            @Control.HiddenFor(x => x.Questions[i].Question)
            <h3>@(i + 1). @Html.DisplayValueFor(x => x.Questions[i].ActualQuestion.Question)</h3>
            @Html.ValidationMessageFor(x => x.Questions[i].Answer)
            <div>@Control.TextAreaFor(x => x.Questions[i].Answer)</div>
        </div>
    }

    @Control.SubmitButton("Save")
    
}
