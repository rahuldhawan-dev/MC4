@model SearchDriversLicense

@using (Form.BeginForm("Index", "DriversLicense"))
{
    <div class="field-column fc200 searchFields">
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.EditorFor(x => x.Employee, new {Container = @Model})
        @Html.EditorFor(x => x.DriversLicenseClass)
        @Html.EditorFor(x => x.HasHazardMaterialEndorsement)
        @Html.EditorFor(x => x.HasLiquidBulkTankCargoEndorsement)
        @Html.EditorFor(x => x.HasHazardMaterialAndTankCombinedEndorsement)
        @Html.EditorFor(x => x.HasMedicalWavierRequiredRestriction)
        @Html.EditorFor(x => x.State)
        @Html.EditorFor(x => x.LicenseNumber)
        @Html.EditorFor(x => x.IssuedDate)
        @Html.EditorFor(x => x.RenewalDate)
        @Html.EditorFor(x => x.Expired)
        @Html.EditorFor(x => x.EmployeeStatus)
        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Search").WithId("Search")
            @Control.ResetButton()
        </text>)
    </div>
}