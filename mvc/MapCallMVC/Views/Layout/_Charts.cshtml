@using MMSINC.Helpers
@{

    var hourlyChart = new ChartBuilder<DateTime, int>();
    hourlyChart.Title = "Hourly Chart with lots of X values so the X axis values only display every 3 hours";
    // charty.XValueFormat = "{0:d}";
    hourlyChart.YAxisLabel = "Yay a label";
    hourlyChart.Interval = ChartIntervalType.Hourly;

    var series = new ChartSeries<DateTime, int>();
    series.Name = "First Series";
    series.Add(DateTime.Today, 10);
    series.Add(DateTime.Today.AddHours(1), 42);
    series.Add(DateTime.Today.AddHours(2), 12);
    series.Add(DateTime.Today.AddHours(3), 14);
    series.Add(DateTime.Today.AddHours(4), 68);
    series.Add(DateTime.Today.AddHours(5), 34);
    series.Add(DateTime.Today.AddHours(15), 14);
    series.Add(DateTime.Today.AddDays(1), 9);
    hourlyChart.Series.Add(series);
}
@hourlyChart

