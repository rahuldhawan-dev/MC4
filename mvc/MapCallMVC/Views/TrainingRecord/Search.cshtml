@model SearchTrainingRecord
           
@using (Form.BeginForm("Index", "TrainingRecord"))
{
    <div class="field-column fc200 searchFields">
        @Html.EditorFor(x => x.EntityId)
        @Html.EditorFor(x => x.HeldOn)
        @Html.EditorFor(x => x.ScheduledDate)
        @Html.EditorFor(x => x.InstructorOperatingCenter)
        @Html.EditorFor(x => x.Instructor, new { Container = @Model })
        @Html.EditorFor(x => x.SecondInstructor, new { Container = @Model })
        @Html.EditorFor(x => x.AmericanWaterCourseNumber)
        @Html.EditorFor(x => x.TrainingRequirement)
        @Html.EditorFor(x => x.TrainingModule)
        @Html.EditorFor(x => x.ClassLocationOperatingCenter)
        @Html.EditorFor(x => x.ClassLocation)
        @Html.EditorFor(x => x.OutsideInstructor)
        @Html.RenderEditorTemplate(Html.DisplayLabelFor(x => x.OnlyOpen), @<text>@Control.CheckBoxFor(x => x.OnlyOpen)</text>)
        @Html.EditorFor(x => x.HasEnoughTrainingSessionsHoursForTrainingModule)
        @Html.EditorFor(x => x.HasAttachedDocuments)

        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Search").WithId("Search")
            @Control.ResetButton()
        </text>)
    </div>
}