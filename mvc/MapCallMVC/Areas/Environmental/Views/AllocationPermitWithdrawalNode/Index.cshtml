@using dotless.Core.Parser.Functions
@model MapCallMVC.Areas.Environmental.Models.ViewModels.SearchAllocationPermitWithdrawalNode

@{
    ActionBarHelper.AddExportLink();
    ActionBarHelper.AddMapLink();
}

@(Html.TableFor(x => Model)
    .WithCaption("Records found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new { x.Id }))
    .SortableColumnFor(x => x.Id, "Id")
    .SortableColumnFor(x => x.Facility, "Facility")
    .SortableColumnFor(x => x.WellPermitNumber, "WellPermitNumber")
    .SortableColumnFor(x => x.AllowableGpm, "AllowableGpm")
    .SortableColumnFor(x => x.AllowableGpd, "AllowableGpd")
    .SortableColumnFor(x => x.AllowableMgm, "AllowableMgm")
    .SortableColumnFor(x => x.CapableGpm, "CapableGpm")
    .SortableColumnFor(x => x.HasStandByPower, "HasStandByPower")
    .WithPaginatedFooter()
)
