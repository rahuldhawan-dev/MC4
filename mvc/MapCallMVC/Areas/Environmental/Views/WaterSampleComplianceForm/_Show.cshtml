            @Html.DisplayFor(x => x.InternalLabSamplesReason)
        }
        @Html.DisplayFor(x => x.BactiSamplesHaveBeenCollected)
        @Html.DisplayFor(x => x.BactiSamplesHaveBeenReported)
        @if (!string.IsNullOrWhiteSpace(Model.BactiSamplesReason))
        {
            @Html.DisplayFor(x => x.BactiSamplesReason)
        }
        @Html.DisplayFor(x => x.LeadAndCopperSamplesHaveBeenCollected)
        @Html.DisplayFor(x => x.LeadAndCopperSamplesHaveBeenReported)
        @if (!string.IsNullOrWhiteSpace(Model.LeadAndCopperSamplesReason))
        {
            @Html.DisplayFor(x => x.LeadAndCopperSamplesReason)
        }
        @Html.DisplayFor(x => x.WQPSamplesHaveBeenCollected)
