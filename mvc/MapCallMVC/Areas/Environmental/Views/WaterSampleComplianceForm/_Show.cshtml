@model WaterSampleComplianceForm

<fieldset>
    <legend>Compliance Details</legend>
    <div class="field-column fc200">
        @Html.DisplayFor(x => x.PublicWaterSupply)
        @Html.DisplayFor(x => x.PublicWaterSupply.State)
        @Html.DisplayFor(x => x.CertifiedMonthYearDisplay)
        @Html.DisplayFor(x => x.DateCertified)
    </div>
</fieldset>

<fieldset>
    <div class="field-column fc500">
        @Html.DisplayFor(x => x.CentralLabSamplesHaveBeenCollected)
        @Html.DisplayFor(x => x.CentralLabSamplesHaveBeenReported)
