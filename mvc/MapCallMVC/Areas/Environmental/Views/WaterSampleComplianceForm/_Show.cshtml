        {
            @Html.DisplayFor(x => x.CentralLabSamplesReason)
        }
        @Html.DisplayFor(x => x.ContractedLabsSamplesHaveBeenCollected)
        @Html.DisplayFor(x => x.ContractedLabsSamplesHaveBeenReported)
