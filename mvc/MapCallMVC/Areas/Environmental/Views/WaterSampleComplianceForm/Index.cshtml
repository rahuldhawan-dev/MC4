@model MapCallMVC.Areas.Environmental.Models.ViewModels.SearchWaterSampleComplianceForm

@(Html.TableFor(_ => Model)
    .WithCaption("Records Found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new { x.Id }))
    .ColumnFor(x => x.Id)
    .ColumnFor(x => x.PublicWaterSupply)
    .ColumnFor(x => x.DateCertified)
    .ColumnFor(x => x.PublicWaterSupply.State)
    .ColumnFor(x => x.CertifiedMonthYearDisplay)
    .ColumnFor(x => x.CentralLabSamplesHaveBeenCollected, "Central Lab Samples Collected")
    .ColumnFor(x => x.CentralLabSamplesHaveBeenReported, "Central Lab Samples Reported")
    .ColumnFor(x => x.ContractedLabsSamplesHaveBeenCollected, "Contracted Lab Samples Collected")
    .ColumnFor(x => x.ContractedLabsSamplesHaveBeenReported, "Contracted Lab Samples Reported")
    .ColumnFor(x => x.InternalLabsSamplesHaveBeenCollected, "Internal Lab Samples Collected")
    .ColumnFor(x => x.InternalLabsSamplesHaveBeenReported, "Internal Lab Samples Reported")
    .ColumnFor(x => x.BactiSamplesHaveBeenCollected, "Bacti Samples Collected")
    .ColumnFor(x => x.BactiSamplesHaveBeenReported, "Bacti Samples Reported")
    .ColumnFor(x => x.LeadAndCopperSamplesHaveBeenCollected, "Lead and Copper Samples Collected")
    .ColumnFor(x => x.LeadAndCopperSamplesHaveBeenReported, "Lead and Copper Samples Reported")
    .ColumnFor(x => x.WQPSamplesHaveBeenCollected, "WQP Samples Collected")
    .ColumnFor(x => x.WQPSamplesHaveBeenReported, "WQP Samples Reported")
    .ColumnFor(x => x.SurfaceWaterPlantSamplesHaveBeenCollected, "SWTP Samples Collected")
    .ColumnFor(x => x.SurfaceWaterPlantSamplesHaveBeenReported, "SWTP Samples Reported")
    .ColumnFor(x => x.ChlorineResidualsHaveBeenCollected, "Chlorine Residuals Collected")
    .ColumnFor(x => x.ChlorineResidualsHaveBeenReported, "Chlorine Residuals Reported")
	.WithPaginatedFooter())