@(Html.TableFor(x => Model)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", "AllocationPermit", new { id = x.Id }, null))
    .ColumnFor(x => x.Id)
    .ColumnFor(x => x.OperatingCenter)
    .ColumnFor(x => x.EnvironmentalPermit.PermitNumber)
