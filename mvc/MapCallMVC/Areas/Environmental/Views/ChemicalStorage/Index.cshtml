@model MapCallMVC.Areas.Environmental.Models.ViewModels.SearchChemicalStorage

@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(_ => Model, new { id = "chemical-storage"})
    .WithCaption("Records Found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new { x.Id }))
    .SortableColumnFor(x => x.Facility.OperatingCenter)
    .SortableColumnFor(x => x.WarehouseNumber)
    .ColumnFor(x => x.IsActive)
    .SortableColumnFor(x => x.Chemical)
    .ColumnFor(x => x.Chemical.SdsHyperlink)
    .ColumnFor(x => x.Chemical.DisplayChemicalStates)
    .SortableColumnFor(x => x.Facility)
    .SortableColumnFor(x => x.MaxStorageQuantityGallons)
    .SortableColumnFor(x => x.MinStorageQuantityGallons)
    .SortableColumnFor(x => x.MaxStorageQuantityPounds)
    .SortableColumnFor(x => x.MinStorageQuantityPounds)
    .SortableColumnFor(x => x.ReorderLevelNonPeakProductionGallons)
    .SortableColumnFor(x => x.ReorderLevelPeakProductionGallons)
    .SortableColumnFor(x => x.ReorderLevelNonPeakProductionPounds)
    .SortableColumnFor(x => x.ReorderLevelPeakProductionPounds)
    .SortableColumnFor(x => x.TypicalOrderQuantityGallons)
    .SortableColumnFor(x => x.TypicalOrderQuantityPounds)
    .SortableColumnFor(x => x.Crtk)
    .SortableColumnFor(x => x.DeliveryInstructions)
    .WithPaginatedFooter())