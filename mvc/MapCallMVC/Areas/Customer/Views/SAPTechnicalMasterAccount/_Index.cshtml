@model IEnumerable<MapCall.SAP.Model.Entities.SAPTechnicalMasterAccount>

@(Html.TableFor(x => x)
    .WithCaption("Records found:" + Model.Count())
    .ColumnFor(x => x.InstallationTypeMapCall, "Installation Type")
    .ColumnFor(x => x.DeviceLocation)
    .TemplateColumnFor("Equipment", x => @<text>@if (x.SAPEquipmentNumber != null){@x.SAPEquipmentNumber.TrimStart('0')}</text>)
    .TemplateColumnFor("Installation", x => @<text>@if (x.Installation != null){@x.Installation.TrimStart('0')}</text>)
    .TemplateColumnFor("Device Serial #", x => @<text>@if (x.DeviceSerialNumber != null){@x.DeviceSerialNumber.TrimStart('0')}</text>)
    .ColumnFor(x => x.ServiceSize)
    .TemplateColumnFor("Meter Serial #", x => @<text>@if (x.MeterSerialNumber != null){@x.MeterSerialNumber.TrimStart('0')}</text>)
    .ColumnFor(x => x.MeterSizeMapCall, "Meter Size")
    .ColumnFor(x => x.AccountNumber)
    .ColumnFor(x => x.AccountStatusAfterReview, "Status")
    .ColumnFor(x => x.Customer)
    .ColumnFor(x => x.CustomerEmail)
    .ColumnFor(x => x.Phone)
    .ColumnFor(x => x.Owner)
    .ColumnFor(x => x.BillingClassificationMapCall, "Billing Classification")
    .ColumnFor(x => x.MobilePhone)
    .ColumnFor(x => x.CriticalCareType)
)