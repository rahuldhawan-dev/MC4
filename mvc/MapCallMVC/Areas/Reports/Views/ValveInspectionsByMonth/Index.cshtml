@model IEnumerable<MapCall.Common.Model.ViewModels.ValveInspectionsByMonthReport>
@if (Model.Any())
{
    ActionBarHelper.AddExportLink();
    var opCntr = Model.First().OperatingCenter;
    var year = Model.First().Year.ToString();
    var now = @DateTime.Now.ToShortDateString();

    <h3>Valves Inspected In @year as of @now</h3>
    <table style="white-space: nowrap;" id="valve-inspections-table">
        <thead>
        <tr>
            <th>Operating Center</th>
            <th>Size Range</th>
            <th>Jan</th>
            <th>Feb</th>
            <th>Mar</th>
            <th>Apr</th>
            <th>May</th>
            <th>Jun</th>
            <th>Jul</th>
            <th>Aug</th>
            <th>Sep</th>
            <th>Oct</th>
            <th>Nov</th>
            <th>Dec</th>
            <th>Total Performed</th>
            <th>Total Required</th>
            <th>Total %</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                if (x != null)
                {
                    <tr>
                        <td>@Html.DisplayValueFor(_ => x.OperatingCenter)</td>
                        <td>@x.SizeRange</td>
                        <td>@Html.DisplayValueFor(_ => x.Jan)</td>
                        <td>@Html.DisplayValueFor(_ => x.Feb)</td>
                        <td>@Html.DisplayValueFor(_ => x.Mar)</td>
                        <td>@Html.DisplayValueFor(_ => x.Apr)</td>
                        <td>@Html.DisplayValueFor(_ => x.May)</td>
                        <td>@Html.DisplayValueFor(_ => x.Jun)</td>
                        <td>@Html.DisplayValueFor(_ => x.Jul)</td>
                        <td>@Html.DisplayValueFor(_ => x.Aug)</td>
                        <td>@Html.DisplayValueFor(_ => x.Sep)</td>
                        <td>@Html.DisplayValueFor(_ => x.Oct)</td>
                        <td>@Html.DisplayValueFor(_ => x.Nov)</td>
                        <td>@Html.DisplayValueFor(_ => x.Dec)</td>
                        <td>@Html.DisplayValueFor(_ => x.Total)</td>
                        <td>@Html.DisplayValueFor(_ => x.TotalRequired)</td>
                        <td>@Html.DisplayValueFor(_ => x.TotalPercentage)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
else
{
    <div class="error-section-message">No results matched your query.</div>
}