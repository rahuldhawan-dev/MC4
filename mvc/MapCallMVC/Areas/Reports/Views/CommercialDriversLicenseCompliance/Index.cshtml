@model MapCallMVC.Areas.Reports.Models.SearchCommercialDriversLicenseCompliance
           
@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(x => Model)
.WithCaption("Records found: " + Model.Count)
.TemplateColumnFor(x => (Html.CurrentUserCanDo("Show", "Employee", "")) ? Html.ActionLink("View", "Show", "Employee", new { x.Id, area = "" }, null) : new MvcHtmlString(string.Empty))
