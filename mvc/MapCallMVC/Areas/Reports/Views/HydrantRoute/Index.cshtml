@model MapCallMVC.Areas.FieldOperations.Models.ViewModels.SearchHydrantRouteReport

@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(x => x, new {id = "results", style = "width:auto;"})
    .ColumnFor(x => x.OperatingCenter)
    .ColumnFor(x => x.Town)
    .TemplateColumnFor("Route", x => Html.AuthorizedActionLinkOrText(x.Route.ToString(), "Index", "Hydrant", new { town = x.Town.Id, route = x.Route, hydrantStatus = x.HydrantStatus.Id, area = "FieldOperations" }, null))
    .ColumnFor(x => x.HydrantStatus)
    .ColumnFor(x => x.Total)
)