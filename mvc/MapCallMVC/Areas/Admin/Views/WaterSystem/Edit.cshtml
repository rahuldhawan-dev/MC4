@model MapCallMVC.Areas.Admin.Models.EditWaterSystem

@using (Form.BeginForm("Update", "WaterSystem", new { id = Model.Id }))
{
    <div class="field-column fc200">
        @Html.EditorFor(x => x.Description)
        @Html.EditorFor(x => x.LongDescription)
        @Html.ButtonGroup(@<text>
                              @Control.SubmitButton("Save")
                              @Html.LinkButton("Cancel", "Show", "WaterSystem", new { id = Model.Id })
                           </text>)
    </div>
}