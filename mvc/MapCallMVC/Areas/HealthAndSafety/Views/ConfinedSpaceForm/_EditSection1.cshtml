@model MapCallMVC.Areas.HealthAndSafety.Models.ViewModels.ConfinedSpaceFormViewModel


<div class="field-column fc200">
    @if (Model.ProductionWorkOrderDisplay != null)
    {
        @Html.DisplayFor(x => x.ProductionWorkOrderDisplay)
        @Html.DisplayFor(x => x.ProductionWorkOrderDisplay.OperatingCenter.State)
        @Html.DisplayFor(x => x.ProductionWorkOrderDisplay.OperatingCenter)
        @Html.DisplayFor(x => x.ProductionWorkOrderDisplay.PlanningPlant)
        @Html.DisplayFor(x => x.ProductionWorkOrderDisplay.Facility)
    }
    @if (Model.ShortCycleWorkOrderNumber != null)
    {
        @Html.DisplayFor(x => x.ShortCycleWorkOrderNumber)
        @Html.EditorFor(x => x.State)
        @Html.EditorFor(x => x.OperatingCenter)
    }
    @if (Model.WorkOrderDisplay != null)
    {
        @Html.DisplayFor(x => x.WorkOrderDisplay)
        @Html.DisplayFor(x => x.WorkOrderDisplay.OperatingCenter.State)
        @Html.DisplayFor(x => x.WorkOrderDisplay.OperatingCenter)
        @Html.DisplayFor(x => x.WorkOrderDisplay.StreetAddress)
        @Html.DisplayFor(x => x.WorkOrderDisplay.TownAddress)
    }

    @Html.EditorFor(x => x.GeneralDateTime)
    @Html.EditorFor(x => x.LocationAndDescriptionOfConfinedSpace)
    @Html.EditorFor(x => x.PurposeOfEntry)
</div>