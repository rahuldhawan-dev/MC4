@model MapCallMVC.Areas.HealthAndSafety.Models.ViewModels.SearchNearMissActionItem
    
@using (Form.BeginForm("Index", "NearMissActionItem"))
{
    <div class="field-column fc200 searchFields">

        @Html.EditorFor(x => x.State)
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.EditorFor(x => x.Type)
        @Html.EditorFor(x => x.NearMissType)
        @Html.EditorFor(x => x.Completed)
        @Html.EditorFor(x => x.DateCompleted)
        @Html.EditorFor(x => x.ResponsibleOwner)
        @Html.EditorFor(x => x.TargetedCompletionDate)

        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Search").WithId("Search")
            @Control.ResetButton()
        </text>)
    </div>
}
