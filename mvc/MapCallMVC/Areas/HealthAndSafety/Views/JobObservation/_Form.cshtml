@model JobObservationViewModel
           
<div class="field-column fc300">
    @Html.EditorFor(x => x.ObservationDate)
    @Html.EditorFor(x => x.OperatingCenter)
    @Html.EditorFor(x => x.JobObservedBy)
    @Html.EditorFor(x => x.Department)
    @Html.EditorFor(x => x.Address)
    @Html.EditorFor(x => x.Coordinate)
    @Html.EditorFor(x => x.TaskObserved)
    @Html.EditorFor(x => x.WorkOrder)
    @Html.EditorFor(x => x.ProductionWorkOrder)
    @Html.EditorFor(x => x.OverallSafetyRating)
    @Html.EditorFor(x => x.OverallQualityRating)
    @Html.EditorFor(x => x.WhyWasTaskSafeOrAtRisk)  
    @Html.EditorFor(x => x.Deficiencies)
    @Html.EditorFor(x => x.RecommendSolutions)

    <fieldset>
        <legend>Equipment</legend>
        @Html.EditorFor(x => x.EqTruckForkliftsHoistsLadders)
        @Html.EditorFor(x => x.EqFrontEndLoaderOrBackhoe)
        @Html.EditorFor(x => x.EqOther)
    </fieldset>
    
    <fieldset>
        <legend>Confined Space</legend>
        @Html.EditorFor(x => x.CsPreEntryChecklistOrEntryPermit)
