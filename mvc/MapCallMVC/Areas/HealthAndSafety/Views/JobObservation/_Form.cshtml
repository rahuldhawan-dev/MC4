        @Html.EditorFor(x => x.ExMarkoutRequestedForWorkSite)
        @Html.EditorFor(x => x.ExWorkSiteSafetyCheckListUtilized)
        @Html.EditorFor(x => x.ExUtilitiesSupportedProtected)
        @Html.EditorFor(x => x.ExAtmosphereTestingPerformed)
        @Html.EditorFor(x => x.ExSpoilPile2FeetFromEdgeOfExcavation)
        @Html.EditorFor(x => x.ExLadderUsedIfGreaterThan4FeetDeep)
        @Html.EditorFor(x => x.ExShoringNecessaryOver5FeetDeep)
        @Html.EditorFor(x => x.ExProtectiveSystemInUseOver5Feet)
        @Html.EditorFor(x => x.ExWaterControlSystemInUse)
    </fieldset>
    
    <fieldset>
        <legend>Ergonomic</legend>
        @Html.EditorFor(x => x.ErChecklistUtilized)
        @Html.EditorFor(x => x.ErErgonomicFactorsProhibitingGoodBodyMechanics)
        @Html.EditorFor(x => x.ErToolsEquipmentUsedCorrectly)
    </fieldset>
    
    @Html.ButtonGroup(@<text>
        @Control.SubmitButton("Save")
        @Html.LinkButton("Cancel", "Search", "JobObservation")
    </text>)
</div>