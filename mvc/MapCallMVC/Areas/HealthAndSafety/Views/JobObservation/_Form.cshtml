        @Html.EditorFor(x => x.CsRetrievalEquipmentTripodHarnessWinch)
        @Html.EditorFor(x => x.CsVentilationEquipment)
    </fieldset>
    
    <fieldset>
        <legend>Personal Protective Equipment</legend>
        @Html.EditorFor(x => x.PpeHardHat)
        @Html.EditorFor(x => x.PpeReflectiveVest)
        @Html.EditorFor(x => x.PpeEyeProtection)
        @Html.EditorFor(x => x.PpeEarProtection)
        @Html.EditorFor(x => x.PpeFootProtection)
        @Html.EditorFor(x => x.PpeGloves)
    </fieldset>
    
    <fieldset>
        <legend>Traffic Control</legend>
        @Html.EditorFor(x => x.TcBarricadesConesBarrels)
        @Html.EditorFor(x => x.TcAdvancedWarningSigns)
        @Html.EditorFor(x => x.TcLightsArrowBoard)
        @Html.EditorFor(x => x.TcPoliceFlagman)
        @Html.EditorFor(x => x.TcWorkZoneInCompliance)
    </fieldset>
    
    <fieldset>
        <legend>Personal Safety</legend>
        @Html.EditorFor(x => x.PsWalkwaysClear)
        @Html.EditorFor(x => x.PsMaterialStockpile)
    </fieldset>

    <fieldset>
