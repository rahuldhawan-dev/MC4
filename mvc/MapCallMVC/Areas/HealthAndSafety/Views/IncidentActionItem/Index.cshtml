@model MapCallMVC.Areas.HealthAndSafety.Models.ViewModels.SearchIncidentActionItem
@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(_ => Model)
      .WithCaption("Records Found: " + Model.Count)
      .TemplateColumnFor(x => Html.ActionLink(x.Entity.Id.ToString(), "Show", "RiskRegisterAsset", null,null,"ActionItemsTab", new {x.Entity.Id, area = ""}, null))
      .SortableColumnFor(x => x.Entity.OperatingCenter.State)
      .SortableColumnFor(x => x.Entity.OperatingCenter)
      .SortableColumnFor(x => x.ActionItem.Type)
      .SortableColumnFor(x => x.ActionItem.NotListedType)
      .SortableColumnFor(x => x.ActionItem.ResponsibleOwner.FullName, "Responsible Owner", "ResponsibleOwner.FullName")
      .SortableColumnFor(x => x.ActionItem.TargetedCompletionDate)
      .SortableColumnFor(x => x.ActionItem.DateCompleted)
    .WithPaginatedFooter()
)