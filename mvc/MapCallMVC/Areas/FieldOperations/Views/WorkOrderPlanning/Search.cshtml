@model MapCallMVC.Areas.FieldOperations.Models.ViewModels.WorkOrderPlanning.SearchWorkOrderPlanning

@Html.ScriptFor(
    "~/Scripts/Areas/FieldOperations/WorkOrder/Search.js",
    ScriptLoadType.LoadFromPartial)

@using (Form.BeginForm("Index", "WorkOrderPlanning"))
{
    <div class="field-column fc200 searchFields">
        @Html.EditorFor(x => x.Id)
        @Html.RenderDisplayTemplate(string.Empty, @<text>-OR-</text>)
        @Html.EditorFor(x => x.OperatingCenter, new { html = new { autofocus = "autofocus" } })
        @Html.EditorFor(x => x.Town)
        @Html.EditorFor(x => x.TownSection)
        @Html.EditorFor(x => x.Street)
        @Html.EditorFor(x => x.StreetNumber)
        @Html.EditorFor(x => x.ApartmentAddtl)
        @Html.EditorFor(x => x.NearestCrossStreet)
        @Html.EditorFor(x => x.AssetType)
        @Html.EditorFor(x => x.WorkDescription)
        @Html.EditorFor(x => x.Priority)
        @Html.EditorFor(x => x.DateReceived)
        @Html.EditorFor(x => x.RequestedBy)
        @Html.EditorFor(x => x.AcousticMonitoringType)
        @Html.EditorFor(x => x.MarkoutRequirement)
        @Html.EditorFor(x => x.StreetOpeningPermitRequired)
        @Html.EditorFor(x => x.StreetOpeningPermitRequested)
        @Html.EditorFor(x => x.StreetOpeningPermitIssued)
        @Html.EditorFor(x => x.Purpose)
        @Html.EditorFor(x => x.OfficeAssignment)
        @Html.EditorFor(x => x.MarkoutToBeCalledToday)
        @Html.EditorFor(x => x.AccountCharged)
        @Html.EditorFor(x => x.PlannedCompletionDate)
        @Html.EditorFor(x => x.Notes)

        @Html.ButtonGroup(@<text>
                @Control.SubmitButton("Search").WithId("Search")
                @Control.ResetButton()
        </text>)
    </div>
}