@model MapCallMVC.Areas.FieldOperations.Models.ViewModels.SearchBond

@using (Form.BeginForm("Index", "Bond")) {
    <div class="field-column fc200 searchFields">
        @Html.EditorFor(x => x.Id)
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.EditorFor(x => x.State)
        @Html.EditorFor(x => x.County)
        @Html.EditorFor(x => x.Town)
        @Html.EditorFor(x => x.BondOpen)

        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Search").WithId("Search")
            @Control.ResetButton()
        </text>)
    </div>
}