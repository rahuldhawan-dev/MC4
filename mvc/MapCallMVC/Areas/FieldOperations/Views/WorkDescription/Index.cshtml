@model MapCallMVC.Areas.FieldOperations.Models.ViewModels.SearchWorkDescription

@(Html.TableFor(_ => Model, new {id = "workDescriptionsTable"})
    .WithCaption("Records Found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new {x.Id}))
    .SortableColumnFor(x => x.Id)
    .SortableColumnFor(x => x.Description)
    .SortableColumnFor(x => x.AssetType)
    .SortableColumnFor(x => x.WorkCategory)
    .SortableColumnFor(x => x.TimeToComplete)
    .SortableColumnFor(x => x.AccountingType)
    .SortableColumnFor(x => x.FirstRestorationAccountingCode)
    .SortableColumnFor(x => x.FirstRestorationCostBreakdown)
    .SortableColumnFor(x => x.FirstRestorationProductCode)
    .SortableColumnFor(x => x.SecondRestorationAccountingCode)
    .SortableColumnFor(x => x.SecondRestorationCostBreakdown)
    .SortableColumnFor(x => x.SecondRestorationProductCode)
    .SortableColumnFor(x => x.ShowBusinessUnit)
    .SortableColumnFor(x => x.ShowApprovalAccounting)
    .WithPaginatedFooter())