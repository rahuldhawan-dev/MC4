@model Valve

@Html.ScriptFor("~/Scripts/Areas/FieldOperations/WorkOrder/ValveTab.js", ScriptLoadType.LoadFromPartial)
@{
    var valveShowUrl = Url.Action("Show", "Valve", new { area = "FieldOperations", Model.Id });
    var valveEditUrl = Url.Action("Edit", "Valve", new { area = "FieldOperations", Model.Id });
}

@Control.Hidden().WithId("valveEditUrl").WithValue(valveEditUrl)

@if (Html.CurrentUserCanDo("Edit", "Valve"))
{
    @Control.Button("Edit Valve").WithId("valveEditButton")
}

<iframe id="valveFrame" style="width:100%; height:450px;" src="@valveShowUrl" title="Valve"></iframe>
