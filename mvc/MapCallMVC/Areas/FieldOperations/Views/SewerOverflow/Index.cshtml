@model MapCallMVC.Areas.FieldOperations.Models.ViewModels.SewerOverflows.SearchSewerOverflow

@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(_ => Model)
      .WithCaption("Records Found: " + Model.Count)
      .TemplateColumnFor(x => Html.ActionLink("View", "Show", new {x.Id}))
      .SortableColumnFor(x => x.Id)
      .SortableColumnFor(x => x.OperatingCenter)
      .SortableColumnFor(x => x.Town)
      .SortableColumnFor(x => x.Street)
      .SortableColumnFor(x => x.SewerClearingMethod)
      .SortableColumnFor(x => x.AreaCleanedUpTo)
      .SortableColumnFor(x => x.ZoneType)
      .SortableColumnFor(x => x.EnforcingAgencyCaseNumber)
      .SortableColumnFor(x => x.IncidentDate)
      .WithPaginatedFooter())