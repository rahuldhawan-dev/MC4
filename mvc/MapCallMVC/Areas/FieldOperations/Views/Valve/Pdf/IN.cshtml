@inherits MapCall.Common.Views.PdfViewBase<Valve>
@{
    Layout = "~/Views/Shared/PdfBaseLayout.cshtml";
    ShowPageNumbersInFooter = ShowHeader = false;
    var topBottom = MarginWidth.HalfInch;
    var leftRight = MarginWidth.QuarterInch;
    TopMargin = topBottom;
    BottomMargin = topBottom;
    LeftMargin = leftRight;
    RightMargin = leftRight;
    IsLandscape = true;
}

@section head {
    <style>
        /* general stuff */
        html {
            padding: 0;
        }

        body {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 13px;
        }

        .centered {
            text-align: center !important;
        }

        .top {
            vertical-align: top;
        }

        .small {
            font-size: smaller;
        }

        .italic {
            font-style: italic;
        }

        span.entry {
            font-family: "Times New Roman", Times, serif;
            display: inline !important;
        }

        table.first-page,
        table.second-page {
            width: 100%;
        }

        span.underline {
            border-bottom: 1px solid black;
        }

        span.width3 {
            width: 30px;
        }

        span.width5 {
            width: 50px;
        }

        span.width30 {
            width: 300px;
        }

        span.width52 {
            width: 420px;
        }

        table.first-page > tbody > tr > td > span,
        table.second-page > tbody > tr > td > table > tbody > tr > td > span {
            display: table-cell;
        }
    </style>
    <style>
        /* first page */
        table.first-page {
            height: 198mm;
            border: 1px solid black;
        }

            table.first-page > tbody > tr {
                height: 3.33%;
            }

                table.first-page > tbody > tr > td,
                table.first-page > tbody > tr > th {
                    border: 1px solid black;
                    width: 12.5%;
                    padding: 2px;
                    white-space: nowrap;
                }

                table.first-page > tbody > tr > th {
                    text-align: left;
                }

                table.first-page > tbody > tr.fixer,
                table.first-page > tbody > tr.fixer > td {
                    visibility: hidden;
                }

                table.first-page > tbody > tr > td.bottom {
                    border: none;
                }
    </style>
    <style>
        table.second-page {
            border: none;
            table-layout: fixed;
        }

            table.second-page > tbody > tr.header > td {
                text-align: center;
                border: none;
            }

            table.second-page > tbody > tr > td.black {
                color: white;
                background-color: black;
            }

            table.second-page > tbody > tr.no-pad-top > td {
                padding-top: 0;
            }

            table.second-page > tbody > tr > td {
                vertical-align: top;
                padding: 2px;
            }

                table.second-page > tbody > tr > td > div,
                table.second-page > tbody > tr > td > table {
                    border: 1px solid black;
                }

                table.second-page > tbody > tr > td > table {
                    font-size: smaller;
                }

                    table.second-page > tbody > tr > td > div,
                    table.second-page > tbody > tr > td > table > tbody > tr > td {
                        padding: 2px;
                    }

                    table.second-page > tbody > tr > td > table > thead > tr > td {
                        text-align: center;
                        border-bottom: 1px solid gray;
                    }

                    table.second-page > tbody > tr > td > table td + td {
                        border-left: 1px solid gray;
                    }

                    table.second-page > tbody > tr > td > table tr + tr {
                        border-top: 1px solid gray;
                    }

                    table.second-page > tbody > tr > td > table > tbody > tr.gray-background {
                        background-color: lightgray;
                    }

                        table.second-page > tbody > tr > td > table > tbody > tr.gray-background > th {
                            text-align: left;
                            border-right: 1px solid gray;
                            padding: 2px;
                        }

        table.restoration {
            table-layout: fixed;
        }

            table.restoration > thead > tr > td {
                border-bottom: 1px solid black !important;
            }

            table.restoration > tbody > tr > th {
                text-align: left;
                font-weight: normal;
                border-right: 1px solid gray;
            }

            table.restoration > tbody > tr + tr {
                border: none !important;
            }

            table.restoration > tbody > tr > td,
            table.restoration > tbody > tr > th {
                padding: 2px;
                border-top: 1px solid gray;
            }

                table.restoration > tbody > tr > td:nth-child(4n) {
                    text-align: center;
                    border-top: none;
                }

            table.restoration > tbody > tr:nth-child(6n) > td {
                border-top: 1px solid black !important;
                border-bottom: none !important;
                text-decoration: underline;
            }

            table.restoration > tbody > tr:nth-child(7n) > td {
                border-top: none !important;
            }
    </style>
}

