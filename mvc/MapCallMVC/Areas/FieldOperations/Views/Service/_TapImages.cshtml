@model Service

@Html.ActionLink("New Tap Image", "New", "TapImage", new { id = Model.Id }, new { area = "FieldOperations", Class = "link-button" })

@(Html.TableFor(x => Model.TapImages, new { id = "tapImagesTable" })
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", "TapImage", new { id = x.Id }, new { area = "FieldOperations" }))
    .ColumnFor(x => x.OperatingCenter)
    .ColumnFor(x => x.ServiceNumber)
    .ColumnFor(x => x.PremiseNumber)
    .ColumnFor(x => x.DateCompleted)
    .ColumnFor(x => x.CreatedAt)
    .ColumnFor(x => x.IsDefaultImageForService)
    .ColumnFor(x => x.OfficeReviewRequired)
)