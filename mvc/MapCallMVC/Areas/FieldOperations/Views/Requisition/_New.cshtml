@model MapCallMVC.Areas.FieldOperations.Models.ViewModels.Requisitions.CreateWorkOrderRequisition
    
@using (var f = Form.BeginAjaxForm("Create", "Requisition"))
{
    f.HtmlAttributes["title"] = "Add Purchase Order";
    @Control.HiddenFor(x => x.WorkOrder)
    <div class="field-column fc200">
        @Html.EditorFor(x => x.RequisitionType)
        @Html.EditorFor(x => x.SAPRequisitionNumber)
        @Html.ButtonGroup(Control.SubmitButton("Save").WithId("save-requisition"))
    </div>
}