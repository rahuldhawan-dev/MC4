@model MapCallMVC.Areas.WaterQuality.Models.ViewModels.AddBacterialWaterSampleAnalystOperatingCenter

<div class="collapse-panel" data-title="Add Operating Center">
    @using (Form.BeginRouteForm("BacterialWaterSampleAnalyst", "OperatingCenter", null, ManyToManyRouteAction.Add))
    {
        <fieldset class="field-column fc200">
            @Html.EditorFor(x => x.OperatingCenter)
            @Html.ButtonGroup(
        @<text>
            @Control.SubmitButton("Add Operating Center").WithId("addOperatingCenterButton")
            @Control.Button("Cancel").WithId("cancelAddOperatingCenterButton").WithCssClass("cancel")
        </text>)
        </fieldset>
    }
</div>