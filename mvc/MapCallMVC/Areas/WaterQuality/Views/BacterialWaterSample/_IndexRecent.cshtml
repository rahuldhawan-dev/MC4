@model IEnumerable<BacterialWaterSample>

@(Html.TableFor(_ => Model)
		.WithCaption("Records Found: " + Model.Count())
		.TemplateColumnFor(x => @<text>
									@Html.ActionLink("View", "Show", new {x.Id})                                        
								</text>)
		.ColumnFor(x => x.OperatingCenter)
		.ColumnFor(x => x.SampleCollectionDTM)
		.ColumnFor(x => x.CollectedBy)
		.ColumnFor(x => x.BacterialSampleType)
		.ColumnFor(x => x.ComplianceSample)
		.ColumnFor(x => x.SampleNumber)
		.TemplateColumnFor("Sample Site", x => @<text>
			@x.Town, @x.SampleSite.CommonSiteName
		</text>)
		.ColumnFor(x => x.ReceivedByLabDTM)
		.ColumnFor(x => x.Cl2Free)
		.ColumnFor(x => x.Cl2Total)
		.ColumnFor(x => x.Nitrite)
		.ColumnFor(x => x.Nitrate)
		.ColumnFor(x => x.Monochloramine)
		.ColumnFor(x => x.FreeAmmonia)
		.ColumnFor(x => x.Ph)
		.ColumnFor(x => x.Temperature)
		.ColumnFor(x => x.Iron)
		.ColumnFor(x => x.Manganese)
		.ColumnFor(x => x.OrthophosphateAsP)
		.ColumnFor(x => x.OrthophosphateAsPO4)
		.ColumnFor(x => x.Conductivity)
		.ColumnFor(x => x.Alkalinity)
		.ColumnFor(x => x.ColiformSetupDTM)
		.ColumnFor(x => x.ColiformSetupAnalyst)
		.ColumnFor(x => x.ColiformReadDTM)
		.ColumnFor(x => x.ColiformReadAnalyst)
		.ColumnFor(x => x.ColiformConfirm)
		.ColumnFor(x => x.EColiConfirm))