@model MapCallMVC.Areas.WaterQuality.Models.ViewModels.InlineEditBacterialWaterSample
@*
	NOTE: If you add/remove/rearrange the fields in here, you must also do the same for _ShowColumns.cshtml	
*@
@(Html.RowCollectionFor(Model)
      .TemplateColumnFor(x => @<text>
        @Control.SubmitButton("Save").WithCssClass("button-link")
        @Html.Link("#", "Cancel")
    </text>)
	.ColumnFor(x => x.OperatingCenterStr)
	.ColumnFor(x => x.SampleSiteStr)
	.ColumnFor(x => x.SampleCollectionDTM)
	.ColumnFor(x => x.CollectedBy)
	.ColumnFor(x => x.BacterialSampleType)
	.ColumnFor(x => x.ComplianceSample)
	.ColumnFor(x => x.Location)
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Ph))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Temperature))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Cl2Free))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Cl2Total))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Monochloramine))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.FreeAmmonia))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Nitrite))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Nitrate))
    .TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Alkalinity))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Iron))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Manganese))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Turbidity))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.Conductivity))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.OrthophosphateAsP))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.OrthophosphateAsPO4))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.SampleNumber))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ReceivedByLabDTM))
	.ColumnFor(x => x.IsInvalid)
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ColiformConfirm))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ColiformConfirmMethod))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ColiformSetupAnalyst))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ColiformSetupDTM))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ColiformReadAnalyst))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.ColiformReadDTM))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.FinalHPC))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.IsSpreader))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.HPCConfirmMethod))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.HPCSetupAnalyst))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.HPCSetupDTM))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.HPCReadAnalyst))
	.TemplateColumnFor("", y => Html.EditorWithoutWrapperFor(x => x.HPCReadDTM))
	.TemplateColumnFor("", y => @<text>
									@if (y.ShouldDisplayReadyForLIMSField)
									{
										@Html.EditorWithoutWrapperFor(x => x.IsReadyForLIMS)
									}
	                             </text>)
	.TemplateColumnFor(x => @<text>
                                  @Control.SubmitButton("Save").WithCssClass("button-link")
                                  @Html.Link("#", "Cancel")
                               </text>)
      )