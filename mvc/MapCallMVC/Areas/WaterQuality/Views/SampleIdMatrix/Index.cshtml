@model MapCallMVC.Areas.WaterQuality.Models.ViewModels.SearchSampleIdMatrix

@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(_ => Model)
    .WithCaption("Records Found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new {x.Id}))
    .SortableColumnFor(x => x.Id)
    .ColumnFor(x => x.SampleSite.State)
    .SortableColumnFor(x => x.RoutineSample)
    .SortableColumnFor(x => x.SampleSite.Id, "SampleSiteID", "ss.Id")
    .SortableColumnFor(x => x.WaterConstituent, "WaterConstituent.Description")
    .SortableColumnFor(x => x.ProcessStage)
    .SortableColumnFor(x => x.ProcessStageSequence)
    .SortableColumnFor(x => x.ParameterSequence)
    .SortableColumnFor(x => x.Parameter)
    .SortableColumnFor(x => x.SamplePurpose)
    .SortableColumnFor(x => x.ProcessReasonForSample)
    .SortableColumnFor(x => x.PerformedBy)
    .SortableColumnFor(x => x.Frequency)
    .SortableColumnFor(x => x.DataStorageLocation)
    .SortableColumnFor(x => x.MethodInstrumentLaboratory)
    .SortableColumnFor(x => x.BellevilleSampleId)
    .SortableColumnFor(x => x.TatBellvilleLabHrs)
    .SortableColumnFor(x => x.InterferenceBy)
    .SortableColumnFor(x => x.DataStorageLocationOnLineInstrument)
    .SortableColumnFor(x => x.IHistorianSignalIdOnLineInstrument)
    .SortableColumnFor(x => x.ComplianceReq)
    .SortableColumnFor(x => x.ProcessTarget)
    .SortableColumnFor(x => x.TriggerPhase1)
    .SortableColumnFor(x => x.ActionPhase1)
    .SortableColumnFor(x => x.TriggerPhase2)
    .SortableColumnFor(x => x.ActionPhase2)
    .SortableColumnFor(x => x.Comment)
    .ColumnFor(x => x.ScadaNotes)
    .SortableColumnFor(x => x.WaterConstituent.SamplingFrequency, "WaterConstituent.SamplingFrequency")
    .SortableColumnFor(x => x.SampleSite.OperatingCenter, "ss.OperatingCenter")
    .SortableColumnFor(x => x.WaterConstituent.Id, "WaterConstituentId", "WaterConstituent.Id")
    .WithPaginatedFooter())