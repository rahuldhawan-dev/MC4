@model MapCallMVC.Areas.ProjectManagement.Models.ViewModels.SearchEstimatingProject

@{ ActionBarHelper.AddExportLink();}

@(Html.TableFor(_ => Model, new {id = "estimatingProjectsTable"})
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new {x.Id}))
    .SortableColumnFor(x => x.Id, "Id")
    .SortableColumnFor(x => x.ProjectNumber, "ProjectNumber")
    .SortableColumnFor(x => x.ProjectName, "ProjectName")
    .SortableColumnFor(x => x.OperatingCenter, "OperatingCenter.OperatingCenterCode")
    .SortableColumnFor(x => x.Contractor, "Contractor.Name")
    .SortableColumnFor(x => x.Town, "Town.ShortName")
    .SortableColumnFor(x => x.Estimator, "Estimator.LastName")
    .SortableColumnFor(x => x.EstimateDate, "EstimateDate")
    .SortableColumnFor(x => x.CreatedBy, "CreatedBy")
    .WithPaginatedFooter())
    