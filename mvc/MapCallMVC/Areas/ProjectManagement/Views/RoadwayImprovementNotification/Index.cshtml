@model MapCallMVC.Areas.ProjectManagement.Models.ViewModels.SearchRoadwayImprovementNotification

@{
    ActionBarHelper.AddExportLink();
    ActionBarHelper.AddMapLink();
}

@(Html.TableFor(_ => Model)
    .WithCaption("Records Found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new {x.Id}))
    .SortableColumnFor(x => x.OperatingCenter, "OperatingCenter")
    .SortableColumnFor(x => x.Town, "Town")
    .SortableColumnFor(x => x.ExpectedProjectStartDate, "ExpectedProjectStartDate")
    .SortableColumnFor(x => x.DateReceived)
    .SortableColumnFor(x => x.RoadwayImprovementNotificationStatus)
    .SortableColumnFor(x => x.Description, "Description")
    .SortableColumnFor(x => x.PreconMeetingDate)
    .SortableColumnFor(x => x.RoadwayImprovementNotificationPreconAction)
    .WithPaginatedFooter())