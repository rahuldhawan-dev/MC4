    .checkbox-list-wider {
        width: 300px;
    }

    #mainPickerDiv {
        width: 90%;
        height: 90%;
        top: 5% !important;
        bottom: 5% !important;
    }
</style>

@Html.ScriptFor("~/Scripts/Areas/ProjectManagement/RecurringProject/Form.js", ScriptLoadType.LoadFromPartial)

@Html.ScriptFor("~/Scripts/Areas/ProjectManagement/RecurringProject/New.js", ScriptLoadType.LoadFromPartial)

