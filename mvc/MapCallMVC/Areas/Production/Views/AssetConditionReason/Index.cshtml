@model IEnumerable<AssetConditionReason>

@(Html.TableFor()
      .WithCaption("Records found: " + Model.Count())
      .TemplateColumnFor(x => Html.AuthorizedActionLink("View", "Show", "AssetConditionReason", new { id = x.Id }))
      .ColumnFor(x => x.Code)
      .ColumnFor(x => x.Description)
      .ColumnFor(x => x.ConditionDescription.ConditionType)
      .ColumnFor(x => x.ConditionDescription))