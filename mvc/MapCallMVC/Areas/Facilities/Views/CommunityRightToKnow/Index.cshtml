@model MapCallMVC.Areas.Facilities.Models.ViewModels.SearchCommunityRightToKnow
    
@{
    ActionBarHelper.AddExportLink();
}

@(Html.TableFor(_ => Model)
    .WithCaption("Records Found: " + Model.Count)
    .TemplateColumnFor(x => Html.ActionLink("View", "Show", new {x.Id}))
    .ColumnFor(x => x.Facility.OperatingCenter.State)
    .ColumnFor(x => x.Facility.OperatingCenter)
    .SortableColumnFor(x => x.Facility)
    .SortableColumnFor(x => x.SubmissionDate)
    .SortableColumnFor(x => x.ExpirationDate)
    .ColumnFor(x => x.Expired)
    .WithPaginatedFooter()
)