@model MapCallMVC.Areas.Facilities.Models.ViewModels.ProcessViewModel

@using (Form.BeginForm("Update", "Process", new { id = Model.Id }))
{
    <div class="field-column fc200">
        @Html.EditorFor(x => x.Sequence)
        @Html.EditorFor(x => x.ProcessStage)
        @Html.EditorFor(x => x.Description)
        @Html.EditorFor(x => x.ProcessOverview)
        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Save")
            @Html.LinkButton("Cancel", "Show", "Process", new { id = Model.Id })
        </text>)
    </div>
}
