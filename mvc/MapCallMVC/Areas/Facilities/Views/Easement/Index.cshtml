@model MapCallMVC.Areas.Facilities.Models.ViewModels.Easements.SearchEasement

@(Html.TableFor(_ => Model, new { @class = "results-table" })
      .WithCaption("Records Found: " + Model.Count)
      .TemplateColumnFor(x => Html.ActionLink("View", "Show", new { x.Id }))
      .SortableColumnFor(x => x.Id)
      .SortableColumnFor(x => x.State)
      .SortableColumnFor(x => x.OperatingCenter)
      .SortableColumnFor(x => x.Town)
      .SortableColumnFor(x => x.TownSection)
      .SortableColumnFor(x => x.StreetNumber)
      .SortableColumnFor(x => x.Street)
      .SortableColumnFor(x => x.CrossStreet)
      .SortableColumnFor(x => x.Coordinate.Latitude)
      .SortableColumnFor(x => x.Coordinate.Longitude)
      .SortableColumnFor(x => x.RecordNumber)
      .SortableColumnFor(x => x.Status)
      .SortableColumnFor(x => x.Category)
      .SortableColumnFor(x => x.Wbs)
      .SortableColumnFor(x => x.EasementDescription)
      .SortableColumnFor(x => x.Reason)
      .SortableColumnFor(x => x.Type)
      .SortableColumnFor(x => x.DateRecorded)
      .SortableColumnFor(x => x.DeedBook)
      .SortableColumnFor(x => x.DeedPage)
      .SortableColumnFor(x => x.BlockLot)
      .SortableColumnFor(x => x.OwnerName)
      .SortableColumnFor(x => x.OwnerAddress)
      .SortableColumnFor(x => x.OwnerPhone)
      .SortableColumnFor(x => x.GrantorType)
      .WithPaginatedFooter())
