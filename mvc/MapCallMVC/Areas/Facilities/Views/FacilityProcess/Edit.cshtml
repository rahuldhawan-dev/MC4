@model MapCallMVC.Areas.Facilities.Models.ViewModels.FacilityProcessViewModel

@using (Form.BeginForm("Update", "FacilityProcess", "Facilities", new{ id = Model.Id }))
{
    <div class="field-column fc200">
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.EditorFor(x => x.Facility)
        @Html.EditorFor(x => x.ProcessStage)
        @Html.EditorFor(x => x.Process)
        @Html.EditorFor(x => x.FacilityProcessDescription)
        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Save")
            @Html.LinkButton("Cancel", "Show", "FacilityProcess", new{ id = Model.Id })
        </text>)
    </div>
}