@using MapCallMVC.Areas.Facilities.Models.ViewModels
@model MapCallMVC.Areas.Facilities.Models.ViewModels.TankInspectionViewModel

@{
    // This variable name is required to setup the control ids/names for posting back this collection
    var tankInspectionQuestions = Model.TankInspectionQuestions.OrderBy(x => x.Id).ToList();
}

    <div>
        <a href="https://mapcall.awapps.com/Modules/mvc/HelpTopic/Show/258#Documents" target="_new">Click here</a> for EPA Tank Tech Tips.
    </div>
@for (var i = 0; i < tankInspectionQuestions.Count; i++)
{
    if (tankInspectionQuestions[i].QuestionGroupId == TankInspectionQuestionGroup.Indices.OVERFLOW_PIPING)
    {
        <fieldset>
            <div class="hazard-item">
                <div class="field-column fc250">
                    @Html.EditorFor(x => tankInspectionQuestions[i].TankInspectionAnswer, new { DisplayName = tankInspectionQuestions[i].QuestionTypeDescription })
                    @Control.HiddenFor(x => tankInspectionQuestions[i].TankInspectionQuestionType)
                </div>
                <div class="field-column fc250">
                    @Html.EditorFor(x => tankInspectionQuestions[i].RepairsNeeded)
                    @Html.EditorFor(x => tankInspectionQuestions[i].ObservationAndComments)
                </div>
            </div>
        </fieldset>

    }
}
