        NotificationType = NotificationItemType.Warning
    })
</div>

@Html.EditorFor(x => x.OperatingCenter)
@Html.EditorFor(x => x.EventCategory)
@Html.EditorFor(x => x.EventSubcategory)
@Html.EditorFor(x => x.EventSummary)
@Html.EditorFor(x => x.IsActive)
@Html.EditorFor(x => x.RootCause)
@Html.EditorFor(x => x.ResponseActions)
@Html.EditorFor(x => x.EstimatedDurationHours)
@Html.EditorFor(x => x.NumberCustomersImpacted)
@Html.EditorFor(x => x.StartDate)
