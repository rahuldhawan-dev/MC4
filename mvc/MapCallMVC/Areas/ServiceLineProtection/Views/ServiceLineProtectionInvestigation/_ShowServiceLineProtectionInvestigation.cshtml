@model ServiceLineProtectionInvestigation

<div class="field-column fc200">
    <fieldset>
        <legend>Customer Information</legend>
        @Html.DisplayFor(x => x.Status)
        @Html.DisplayFor(x => x.OperatingCenter)
        @Html.DisplayFor(x => x.CustomerName)
        @Html.DisplayFor(x => x.StreetNumber)
        @Html.DisplayFor(x => x.Street)
        @Html.DisplayFor(x => x.CustomerAddress2)
        @Html.DisplayFor(x => x.CustomerCity)
        @Html.DisplayFor(x => x.OperatingCenter.State)
        @Html.DisplayFor(x => x.CustomerZip)
        @Html.DisplayFor(x => x.CustomerPhone)
        @Html.DisplayFor(x => x.PremiseNumber)
        @Html.DisplayFor(x => x.AccountNumber)

        @Html.DisplayFor(x => x.CustomerServiceMaterial)
        @Html.DisplayFor(x => x.CustomerServiceSize)
        @if (
                Model.Service != null
                &&
                Model.CustomerServiceMaterial != null
                &&
                (Model.CustomerServiceMaterial.Id == ServiceMaterial.Indices.TUBELOY || Model.CustomerServiceMaterial.Id == ServiceMaterial.Indices.LEAD || Model.CustomerServiceMaterial.Id == ServiceMaterial.Indices.GALVANIZED)
            )
            {
            @Html.RenderDisplayTemplate("Create Renewal", @<text>
                                                              @Html.ActionLink("Renew Service","New","Service",new { id = Model.Service.Id , area = "FieldOperations"}, null)
                                                           </text>)
            }
        @Html.DisplayFor(x => x.WorkType)
        @Html.DisplayFor(x => x.Coordinate)
        @Html.DisplayFor(x => x.Contractor)
    </fieldset>

    <fieldset>
        <legend>Company Information</legend>
        @Html.DisplayFor(x => x.DateInstalled)
        @Html.RenderDisplayTemplate("Service", @<text>
                                                        @if (Model.Service != null)
                                                        {
                                                            @Html.ActionLink(Model.Service.ToString(), "Show", "Service", new { id = Model.Service.Id, area = "FieldOperations"}, null)
                                                        }
                                                     </text>)
        @Html.DisplayFor(x => x.CompanyServiceMaterial)
        @Html.DisplayFor(x => x.CompanyServiceSize)
        @Html.DisplayFor(x => x.RenewalCompleted)
    </fieldset>

    @Html.DisplayFor(x => x.TheNotes)
</div>