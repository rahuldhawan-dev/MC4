@model IEnumerable<AbsenceNotification>
           
@(Html.TableFor(x => Model, new { id = "fmlacasesTable"})
    .TemplateColumnFor(x => Html.ActionLink(x.Id.ToString(), "Show", "AbsenceNotification", new { x.Id, area = "Operations" }, null))
    .ColumnFor(x => x.StartDate)
    .ColumnFor(x => x.EndDate)
    .TemplateColumnFor("FMLA Case", x => @<div>
        @if (x.FamilyMedicalLeaveActCase != null)
        {
            @Html.ActionLink(x.FamilyMedicalLeaveActCase.Id.ToString(), "Show", "FamilyMedicalLeaveActCase", new {x.FamilyMedicalLeaveActCase.Id, area = "Operations"}, null)
        }
    </div>)
)
