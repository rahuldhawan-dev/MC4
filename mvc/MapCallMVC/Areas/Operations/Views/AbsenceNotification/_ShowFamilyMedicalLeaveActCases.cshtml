@model IEnumerable<FamilyMedicalLeaveActCase>
           
@(Html.TableFor(x => Model, new { id = "fmlaCases" })
    .TemplateColumnFor("FMLA Case", x => Html.ActionLink(x.Id.ToString(), "Show", "FamilyMedicalLeaveActCase", new { x.Id, area = "Operations" }, null))
    .ColumnFor(x => x.StartDate)
    .ColumnFor(x => x.EndDate)
    .TemplateColumnFor("Absences", x => @<pre>@x.Employee.AbsenceNotifications.Count(y => y.FamilyMedicalLeaveActCase == x)</pre>)
    .TemplateColumnFor("Total Hours", x => @<pre>@x.Employee.AbsenceNotifications.Where(y => y.FamilyMedicalLeaveActCase == x).Sum(z => z.TotalHoursOfAbsence)</pre>)
)
