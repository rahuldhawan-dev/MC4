@model MapCallMVC.Areas.Operations.Models.ViewModels.SearchAbsenceNotification

@using (Form.BeginForm("Index", "AbsenceNotification")) {
    <div class="field-column fc200 searchFields">
        @Html.EditorFor(x => x.OperatingCenter)
        @Html.EditorFor(x => x.Employee, new { @Container = Model})
        @Html.EditorFor(x => x.LastName)
        @Html.EditorFor(x => x.ReportsTo)
        @Html.EditorFor(x => x.LastDayOfWork)
        @Html.EditorFor(x => x.StartDate)   
        @Html.EditorFor(x => x.EndDate) 
        @Html.EditorFor(x => x.FamilyMedicalLeaveActCase)
        @Html.EditorFor(x => x.AbsenceStatus)
        @Html.EditorFor(x => x.HumanResourcesReviewed)
        @Html.EditorFor(x => x.ProgressiveDiscipline)
        @Html.EditorFor(x => x.ProgressiveDisciplineAdministered)

        @Html.ButtonGroup(@<text>
            @Control.SubmitButton("Search").WithId("Search")
            @Control.ResetButton()
        </text>)
    </div>
}