@using MMSINC.ClassExtensions
@{
    var email = ViewData.TemplateInfo.FormattedModelValue as string;
    IHtmlString link = null;
    if (!string.IsNullOrWhiteSpace(email))
    {
        link = Html.Link("mailto:" + email, email);
    }
}
@RenderDisplayForTemplate(@<text>@link</text>)
