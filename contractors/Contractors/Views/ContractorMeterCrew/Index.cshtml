@model Contractors.Models.ViewModels.SearchContractorMeterCrew
@{
    ViewBag.Title = "Meter Crews";
}

@Html.LinkButton("Add Crew", "New", "ContractorMeterCrew")

@(Html.TableFor(x => x)
    .WithCaption("Records found: " + Model.Count)
    .TemplateColumnFor("Id", x => Html.ActionLink(x.Id.ToString(), "Show", new { x.Id }))
    .ColumnFor(x => x.Contractor)
    .ColumnFor(x => x.Description)
    .ColumnFor(x => x.AMMeters)
    .ColumnFor(x => x.AMLargeMeters)
    .ColumnFor(x => x.PMMeters)
    .ColumnFor(x => x.PMLargeMeters)
    .ColumnFor(x => x.IsActive)
    .WithPaginatedFooter()
)