@model Contractors.Models.ViewModels.EditContractorMeterCrew
@{
    ViewBag.Title = "Edit Meter Crew";
}
@using (Form.BeginForm("Update", "ContractorMeterCrew", new {Model.Id}))
{
    <div class="field-column fc200">
        @Html.EditorFor(x => x.Description)
        @Html.EditorFor(x => x.AMMeters)
        @Html.EditorFor(x => x.AMLargeMeters)
